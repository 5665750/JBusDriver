<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Click">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="AppTheme.CardView" parent="AppTheme.Click">
        <item name="android:layout_marginBottom">@dimen/material_4dp</item>
        <item name="android:layout_marginLeft">@dimen/material_4dp</item>
        <item name="android:layout_marginRight">@dimen/material_4dp</item>
        <item name="android:layout_marginTop">@dimen/material_4dp</item>
        <item name="cardCornerRadius">@dimen/material_3dp</item>
        <item name="cardElevation">@dimen/material_2dp</item>
    </style>

    <style name="DividerLine">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="DividerLine.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">@dimen/material_8dp</item>
        <item name="android:layout_marginBottom">@dimen/material_8dp</item>
    </style>


    <!-- activity-->

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

</resources>
